<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.Request.RequestFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="5dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/offerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:foregroundGravity="left"
                    android:gravity="center|top"
                    android:maxLines="1"
                    android:text="Offer Title Appear Here"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/offerPageDescriptionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:foregroundGravity="left"
                    android:gravity="left"
                    android:maxLines="10"
                    android:text="On sait depuis longtemps que travailler avec du texte lisible et contenant du sens est source de distractions, et empêche de se concentrer sur la mise en page elle-même. L'avantage du Lorem Ipsum sur un texte générique comme 'Du texte. Du texte. Du texte.' est qu'il possède une distribution de lettres plus ou moins normale, et en tout cas comparable avec celle du français standard. De nombreuses suites logicielles de mise en page ou éditeurs de sites Web ont fait du Lorem Ipsum leur faux texte par défaut, et une recherche pour 'Lorem Ipsum' vous conduira vers de nombreux sites qui n'en sont encore qu'à leur phase de construction. Plusieurs versions sont apparues avec le temps, parfois par accident, souvent intentionnellement (histoire d'y rajouter de petits clins d'oeil, voire des phrases embarassantes).  Description text goes here"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/providerNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="left"
                    android:gravity="left"
                    android:text="Provider's Name: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/statusDetailTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="left"
                    android:gravity="left"
                    android:text="Status: "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/bidAmountTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="left"
                    android:gravity="left"
                    android:text="Bid Amount: "
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/coupleBidResponseTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="50dip"
                android:paddingRight="50dip"
                android:visibility="visible">

                <TextView
                    android:id="@+id/offerResponseTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Respond to Offer"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    tools:textStyle="bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:foregroundGravity="center_vertical|clip_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/acceptOfferBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_smooth_border"
                        android:padding="20dp"
                        android:text="Accept Offer"
                        android:textColor="#FFFFFF"
                        tools:background="#4CAF50"
                        tools:textStyle="bold" />

                    <Button
                        android:id="@+id/DenyOfferBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_smooth_border"
                        android:padding="10dp"
                        android:text="Deny Offer"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        tools:background="#9E1616"
                        tools:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>